<Window x:Class="PaintApplication.Views.MainWindow"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       xmlns:vm="clr-namespace:PaintApplication.ViewModels"
       xmlns:views="clr-namespace:PaintApplication.Views"
       Title="Paint Application" Height="800" Width="1200"
       WindowStartupLocation="CenterScreen">

   <!-- Gán DataContext -->
   <Window.DataContext>
       <vm:MainViewModel/>
   </Window.DataContext>

   <DockPanel Background="Black" >
       
       <Menu DockPanel.Dock="Top" Background="#FF202020" Foreground="White" >
            <MenuItem Header="_File">
                <MenuItem Header="New" /> 
                <MenuItem Header="Save" Command="{Binding SaveCommand}" />
                <MenuItem Header="Exit" />
           </MenuItem>

            <MenuItem Header="_Edit" >
               <MenuItem Header="Undo"/>
               <MenuItem Header="Redo"/>
               <MenuItem Header="Cut"/>
               <MenuItem Header="Copy"/>
               <MenuItem Header="Paste"/>
           </MenuItem>

            <MenuItem Header="_View" >
               <MenuItem Header="Zoom In"/>
               <MenuItem Header="Zoom Out"/>
               <MenuItem Header="Full Screen"/>
           </MenuItem>

           <MenuItem Header="_Save" Command="{Binding SaveCommand}"/>
           <MenuItem Header="_Share" Command="{Binding ShareCommand}"/>
       </Menu> 

       <!-- Fix: Wrap ToolboxView in a container that supports star layout -->
       <Grid DockPanel.Dock="Top">
           <views:ToolboxView DataContext="{Binding Toolbox}" />
       </Grid>

       <views:CanvasView DataContext="{Binding Canvas}" />
   </DockPanel>
</Window>
