<Window x:Class="PaintApplication.Views.LayersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Shapes" Height="500" Width="320" WindowStartupLocation="CenterOwner">
    
    <DockPanel Margin="8">
        <TextBlock DockPanel.Dock="Top" Text="All Shapes" FontSize="14" FontWeight="Bold" Margin="0,0,0,8"/>
        
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Content="Delete" Width="70" Margin="0,0,4,0" Click="DeleteShape_Click" />
            <Button Content="Bring to Front" Width="100" Margin="0,0,4,0" Click="BringToFront_Click" />
            <Button Content="Send to Back" Width="100" Click="SendToBack_Click" />
        </StackPanel>

        <!-- Shapes ListBox showing all shapes from Canvas -->
        <ListBox x:Name="ShapesListBox" 
                 ItemsSource="{Binding ShapeItems, RelativeSource={RelativeSource AncestorType=Window}}" 
                 SelectionChanged="ShapesListBox_SelectionChanged"
                 AllowDrop="True">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <EventSetter Event="PreviewMouseLeftButtonDown" Handler="ListBoxItem_PreviewMouseLeftButtonDown"/>
                    <EventSetter Event="Drop" Handler="ListBoxItem_Drop"/>
                    <EventSetter Event="DragOver" Handler="ListBoxItem_DragOver"/>
                    <Setter Property="AllowDrop" Value="True"/>
                    <Setter Property="Cursor" Value="Hand"/>
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Margin="2">
                        <Border Width="40" Height="40" BorderBrush="Gray" BorderThickness="1" Margin="0,0,8,0" Background="White">
                            <Border Background="LightGray" CornerRadius="2">
                                <TextBlock Text="â¬œ" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#666"/>
                            </Border>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="{Binding DisplayName}" FontSize="12" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding TypeName}" FontSize="10" Foreground="Gray"/>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </DockPanel>
</Window>