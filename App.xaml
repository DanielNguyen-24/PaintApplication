<Application x:Class="PaintApplication.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PaintApplication"
             xmlns:conv="clr-namespace:PaintApplication.Converters"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Import resource dictionaries -->
                <ResourceDictionary Source="Resources/Icons.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Converters -->
            <conv:ColorToBrushConverter x:Key="ColorToBrushConverter"/>
            <conv:EnumToBooleanConverter x:Key="EnumToBooleanConverter"/>
            <conv:EnumEqualsConverter x:Key="EnumEqualsConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
